<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles.css" />
  <title><%= title %></title>
</head>
<body>
  <%- include('navbar') %>

  <div class="main-content edit-project">
    <h1>Edit Project</h1>
    <form method="POST" action="<%= action %>">
      
      <!-- Project Name -->
      <label>
        <div class="label-text">Project Name:</div>
        <input class="name" name="name" type="text" value="<%= project.name %>" required />
      </label>

      <!-- Category -->
      <label>
        <div class="label-text">Category:</div>
        <input class="category" name="category" type="text" value="<%= project.category %>" required />
      </label>

      <!-- Tasks -->
      <label>
        <div class="label-text">Tasks:</div>
        <div class="tasks-list">
          <% project.tasks.forEach((task, idx) => { %>
            <input class="task-input" name="tasks[]" type="text" value="<%= task %>" placeholder="Task <%= idx + 1 %>" />
          <% }); %>
        </div>
      </label>

      <!-- Form Actions -->
      <div class="form-actions">
        <input type="submit" value="Save Changes" />
        <a href="<%= `/project/${project.id}` %>"><input type="button" value="Back" /></a>
      </div>
    </form>
  </div>
</body>
</html>
